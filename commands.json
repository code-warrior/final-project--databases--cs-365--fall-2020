// Retrieve all the info from the student with a GPA greater then 3.5

db.studentList.find({"studentInfo.gpa" : {$gt : 3.5}}).pretty()

// Update the status of the student advised by Donald Knuth with the highest GPA to “graduated”

db.studentList.aggregate(
	{$match : {"studentInfo.advisor" : "Donald Knuth"}}, 
	{$sort : {"studentInfo.gpa" : -1}},
	{$limit : 1},
	{$set : {"studentInfo.studentStatus" : "Graduated"}},
	{$project : {_id : 1, name : 1, studentInfo : 1, enrollmentInfo : 1, contactInfo : 1,}}).pretty()

// Update the status of the student with the lowest GPA to “withdrawn”

db.studentList.aggregate( 
	{$sort : {"studentInfo.gpa" : 1}},
	{$limit : 1},
	{$set : {"studentInfo.studentStatus" : "Withdrawn"}},
	{$project : {_id : 1, name : 1, studentInfo : 1, enrollmentInfo : 1, contactInfo : 1,}}).pretty()